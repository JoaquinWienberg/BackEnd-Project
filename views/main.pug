
html
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous")
        title='Productos'
    body
        h1(class="text-center")="Listado de productos"
        table(class="table table-dark text-center"  style="max-width: 800px; margin: 15px auto")
            tr 
                th="Producto"
                th="Precio"
                th="Imagen"
            each product in products
                tr(class="product text-dark table-light text-center")  
                    td= product.title 
                    td= product.price
                    td
                        img(src=product.thumbnail width="45px")
        div(class="d-flex justify-content-center")    
            button(type="button" class="btn btn-dark"  onclick="location.href='/api/nuevoproductoPug'")= "Agregar nuevo producto"
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous")