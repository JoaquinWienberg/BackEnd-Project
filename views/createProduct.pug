
html
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous")
        title='Nuevo producto'
    body
        h2(class="text-center")="Inserte la información del producto para agregar"
        form(action="/api/productos" method="POST" class="m-2")
            div(class="text-primary d-flex justify-content-center align-items-center")="Nombre del producto"
                input(type="text" name="title")
            div(class="text-primary d-flex justify-content-center align-items-center")="Precio:"
                input(type="text" name="price")
            div(class="text-primary d-flex justify-content-center align-items-center")="Link:"
                input(type="text" name="thumbnail")
            div(class="d-flex justify-content-center align-items-center")
                button(type="submit" class="btn btn-dark m-2")="Añadir"
                button(type="button" class="btn btn-dark" onclick="location.href='/api/productosPug'")="Ver productos"
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous")
