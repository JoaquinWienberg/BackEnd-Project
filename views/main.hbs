<h2 class="text-center my-4">Lista de productos</h2>
{{#if stockExists}}
<table class="table table-dark text-center"  style="max-width: 800px; margin: 15px auto">
    <tr>
        <th>Producto</th>
        <th>Precio</th>
        <th>Imagen</th>
    </tr>
    {{#each displayProducts}}
    <tr class="product text-dark table-light text-center">
        <td>{{this.title}}</td>
        <td>${{this.price}}</td>
        <td><img src={{this.thumbnail}} width="40px" alt="Product"></td>
    </tr>
    {{/each}}
</table>
{{else}}
<span>No se detectaron productos</span>
{{/if}}
<div class="d-flex justify-content-center my-2">
    <button type="button" class="btn btn-dark" onclick="location.href='/api/nuevoproducto'"> AÃ±adir nuevo producto</button>
</div>
