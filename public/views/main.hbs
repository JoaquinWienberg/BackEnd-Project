<h2 class="text-center my-4">Current product list</h2>
{{#if stockExists}}
<table class="table table-dark text-center"  style="max-width: 800px; margin: 15px auto">
    <tr>
        <th>Product</th>
        <th>Price</th>
        <th>Image</th>
    </tr>
    {{#each displayProducts}}
    <tr class="product text-dark table-light text-center">
        <td>{{this.title}}</td>
        <td>${{this.price}}</td>
        <td><img src={{this.thumbnail}} width="40px" alt="Product"></td>
    </tr>
    {{/each}}
</table>
{{else}}
<span>No products detected</span>
{{/if}}
